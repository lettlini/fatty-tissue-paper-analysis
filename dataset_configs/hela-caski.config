params {
    in_dir                 = "monolayer/eliane/HeLa_CaSki/"
    out_dir                = "HeLa_CaSki"
    min_nucleus_area_mumsq = 50
    cell_cutoff_mum        = 20
    lag_times_minutes      = [30, 60, 90, 120, 150, 180, 210, 240]
    minimum_neighbors      = 2
    exclude_attrs          = "cell_Q_tensor,nucleus_Q_tensor"
    include_attrs          = ""
}

profiles {
    local {
        process {
            time   = "1h"
            memory = "10GB"

            // High CPU processes
            withLabel: high_cpu {
                cpus = 12
            }
            withLabel: low_cpu {
                cpus = 2
            }

            withLabel: short_running {
                time = "30m"
            }

            withLabel: long_running {
                time = "3h"
            }

            withLabel: single_threaded {
                cpus = 1
            }
            withLabel: high_memory {
                memory = "24GB"
            }
            withName: nuclei_segmentation {
                maxForks = 1
            }
        }
    }
    cluster {
        process {
            time   = "1h"
            memory = "10GB"

            // High CPU processes
            withLabel: high_cpu {
                cpus = 48
            }
            withLabel: low_cpu {
                cpus = 2
            }

            withLabel: short_running {
                time = "30m"
            }

            withLabel: long_running {
                time = "3h"
            }

            withLabel: single_threaded {
                cpus = 1
            }
            withLabel: high_memory {
                memory = "24GB"
            }
        }
    }
}
