params {
    out_dir = "HeLa_CaSki"
    in_dir  = "monolayer/eliane/HeLa_CaSki/"
}

process {
    time   = "1h"
    memory = "10GB"

    // High CPU processes
    withLabel: high_cpu {
        cpus = 48
    }
    withLabel: low_cpu {
        cpus = 2
    }

    withLabel: short_running {
        time = "30m"
    }

    withLabel: long_running {
        time = "3h"
    }

    withLabel: single_threaded {
        cpus = 1
    }
    withLabel: high_memory {
        memory = "24GB"
    }
}
